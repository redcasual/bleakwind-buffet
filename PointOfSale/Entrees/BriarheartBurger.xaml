<UserControl x:Class="PointOfSale.Entrees.BriarheartBurger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Entrees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Salmon">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="20" Background="Transparent" Grid.Column="0">
            <Label FontSize="22" FontWeight="Bold" Foreground="AntiqueWhite">Customization</Label>
            <CheckBox FontSize="14" Foreground="AntiqueWhite">Bun</CheckBox>
            <CheckBox FontSize="14" Foreground="AntiqueWhite">Ketchup</CheckBox>
            <CheckBox FontSize="14" Foreground="AntiqueWhite">Mustard</CheckBox>
            <CheckBox FontSize="14" Foreground="AntiqueWhite">Pickle</CheckBox>
            <CheckBox FontSize="14" Foreground="AntiqueWhite">Cheese</CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
