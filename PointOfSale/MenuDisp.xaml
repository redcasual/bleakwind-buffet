<UserControl x:Class="PointOfSale.MenuDisp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Column="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button Background="Salmon" Foreground="AntiqueWhite" FontWeight="Bold" Name ="Entree" Grid.Row ="0" Grid.Column="0" FontSize="26">
            Entree
        </Button>

        <Button Background="LightGray" Foreground="AntiqueWhite" FontWeight="Bold" Name ="Side" Grid.Row ="1" Grid.Column="0" FontSize="26">
            Side
        </Button>

        <Button Background="CornflowerBlue" Foreground="AntiqueWhite" FontWeight="Bold" Name ="Drink" Grid.Row ="2" Grid.Column="0" FontSize="26">
            Drink
        </Button>

    </Grid>
</UserControl>
